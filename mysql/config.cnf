# mysql/my.cnf
[mysqld]
performance_schema=ON
performance-schema-consumer-events-statements-history-long=ON
performance-schema-consumer-events-statements-current=ON
performance-schema-consumer-events-statements-history=ON

# Longer captured SQL text for better visibility in DIGEST_TEXT (supported in MySQL 8.0)
performance_schema_max_sql_text_length=4096
# Optionally increase digest length as well
performance_schema_max_digest_length=4096

# Make sure statement instrumentation is on (it is by default, but explicit is nice)
performance-schema-instrument='statement/%=ON'

# We do not require TLS for this PoC; MySQL may still print a self-signed cert warning which is harmless.
require_secure_transport=OFF

# Lower noise in tiny setups (optional)
table_open_cache=256
max_connections=100
